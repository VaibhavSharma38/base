.xepan-tool-options(id='{$_name}' style="display:none" for-xepan-component='xepan/base/Tool_UserPanel')
	h1
		span User Panel Options
	.xepan-tool-option
		.xepan-tool-option-title Layout
		.xepan-tool-option-value 
			select#user-panel-layout(data-attr='layout')
				option login_view
				option forget_password
				option new_registration
				option verify_account
				option verify_again
		div.atk-form-row			
			.xepan-tool-option
				.xepan-tool-option-title Success URL
				.xepan-tool-option-value 
					input#user-panle-sucess-url(data-attr='login_success_url' data-shortname="success_url")
		div.atk-form-row
			.xepan-tool-option
				.xepan-tool-option-title Logout Page
				.xepan-tool-option-value 
					input#user-panle-logoutpage-layout(data-attr='logout_page_form_layout' data-shortname="logout_page")
		div.atk-form-row
			.xepan-tool-option
				.xepan-tool-option-title Login Page
				.xepan-tool-option-value 
					input#user-panle-loginpage-layout(data-attr='login_page_form_layout' data-shortname="login_page")
		div.atk-form-row
			.xepan-tool-option
				.xepan-tool-option-title Micro Login
				.xepan-tool-option-value 
					select#user-panel-micrologin(data-attr='show_micro_login' data-shortname="micro_login")
						option True
						option False																							
	script.
		$('\#{$_name} [data-attr]').on('change',function(){
			$(current_selected_component).attr($(this).data('attr'),$(this).val());
		});

		$('\#{$_name}').on('show',function(event){
			$('\#{$_name} [data-attr]').each(function(index,value){
				$(this).val($(current_selected_component).attr($(this).data('attr')));				
			});
		})