        #login-box
          #login-box-holder
            .row
              .col-xs-12
                header#login-header
                  #login-logo
                    img(src='img/logo.png', alt='')
                #login-box-inner
                    {Content}
                    {form_layout}
                    .input-group
                      i.fa.fa-user
                      .atk-form-row.atk-form-field{$username}
                    .input-group
                      i.fa.fa-key
                      .atk-form-row.atk-form-field{$password}
                    #remember-me-wrapper
                      .row
                        .col-xs-6
                          .checkbox-nice
                            {$memorize}
                        a#login-forget-link.col-xs-6(href='?page=xepan_base_forgotpassword')
                          | Forgot password?
                    .row
                      .col-xs-12
                        button.btn.btn-success.col-xs-12(type='submit') Login
