div(id="{$_name}")
  .row.xepan-push-small
    span
      div.panel.panel-default.panel-body
        .row.xepan-push 
          .col-md-6
            .btn.btn-primary.btn-sm.inform.btn-block Inform Customer
          .col-md-6 
            .btn.btn-primary.btn-sm.create.btn-block Create Communication
        {$form}
  {rows}{row}
  #accordion.panel-group.accordion
      .panel.panel-default
        .panel-heading
          h4.panel-title(style="height: 20px;overflow: hidden;")
            a.accordion-toggle.collapsed(href='#details{$id}', data-parent='#accordion', data-toggle='collapse')
              .col-md-6 
                {title}title of communication should come here{/}
                {$attachment}
              .col-md-2
              .col-md-2
                span.pull-right
                  {$created_at}
              .col-md-1
                span.pull-right
                  {$status}
              .col-md-1
                span.pull-right
                  {$communication_type}
        .panel-collapse.collapse(style='height: 2px;', id="details{$id}")
          .panel-body
            .row
              {from_lister}
              span.small From: 
              {rows}{row} 
              span.small {$name} &nbsp;&nbsp;
              {/}{/}
              {/}
            .row
              {to_lister}
              span.small To:
              {rows}{row} 
              span.small {$email}{$number} &nbsp; &nbsp;
              {/}{/}
              {/}
            .row
              {cc_lister}
              span.small CC: 
              {rows}{row} 
              span.small {$email}{$number} &nbsp;&nbsp;
              {/}{/}
              {/}
            .row.xepan-push-large
              hr    
            .row.xepan-push-large    
              {description}  
              | Description should come here simpley for now
              {/}
            .row    
              {Attachments}
              {rows}{row}
              span     
                .img
                  a(href="{$file}")
                    img(alt='', src='{$file}')
                span.name
                a(href='{$file}' download) Download Attachment
              {/}{/}
              {/}

  {/}{/}