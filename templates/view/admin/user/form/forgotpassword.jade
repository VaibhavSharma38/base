#login-full-wrapper 
  .container(style="margin-top:100px")
    .row
      .col-xs-12
        #login-box
          #login-box-holder
            .row
              .col-sm-12.col-md-12
                .panel.panel-default
                  .panel-heading
                    strong  Forgot Password
                  .panel-body
                    form(role='form', action='#', method='POST')
                      fieldset
                        .row.xepan-push
                          .text-center
                            //- i.fa.fa-envelope-o.fa-5x.xepan-padding
                            img.profile-img(src='./img/logo3-black.png', alt='')
                        .row.xepan-push
                          .col-sm-12.col-md-10.col-md-offset-1.atk-form-row.atk-form-field
                            small.text-muted|Don't worry just fill in your email and we'll help you reset your password
                            .form-group(style="margin-top:30px")
                              .input-group
                                span.input-group-addon
                                  i.fa.fa-envelope
                                .xepan-form-field{$email}    
                                //- input(placeholder='Username', name='loginname', type='text', autofocus='')
                        .row.xepan-push-large
                          .col-xs-12
                            button.btn.btn-success.col-xs-12(type='submit') Send Email
                  .panel-footer.text-right
                    //- | Don't have an account! 
                    a.forgot-link.back-login.xepan-login-panl-loadview(href="index.php" data-showview="login_view") Back to login
                     #login-box-footer                        
