.xepan-grid.main-box.clearfix.atk-table.atk-table-zebra.atk-table-bordered(id="{$_name}" class="{$class}")
    {Pannel}
    header.main-box-header.clearfix.atk-actions(class=" {$class} ")
        div.filter-block( style="100%")
            .pull-right {$grid_buttons} 
            .form-group.pull-right.xepan-filter-form
                span(class="form-control pull-left")|{$quick_search}
                    i(class="fa fa-search search-icon")
    {/Pannel}
    .main-box-body.clearfix.table-responsive
        table.table.user-list.table-hover(style="width:100%")
            {header}
            thead
                {cols}{col}
                th Activity Message
                th Created By
                th Related Document No.
                th Related Person
                th Created At
                {/}{/}
            {/}
            {$subheader}
            //- {contact}Vijay mali{/} &nbsp; {related_contact} Avengers Initiative{/}
            tbody
                {rows}{row}
                tr(class="{$odd_even}" data-id="{$id}" data-contacttype="{$contact_type}")
                    {cols}
                    td(style="font-size: 0.87em; font-weight: 400;")
                        |{$activity}&nbsp;
                    td
                        a.do-view-person-frame(href='#',data-id="{$id}" data-contact-id="{$contact_id}"){$contact}
                    td 
                        a.do-view-frame(href='#',data-id="{$id}" data-document-id="{$related_document_id}" onclick="javascript:$.univ().frameURL('aaa','?page={$document_url}');"){$related_document_id}
                    td
                        a.do-view-person-frame(href='#',data-id="{$id}" data-contact-id="{$related_contact_id}"){$related_contact}
                    td
                     | {$callback_date}
                    {/}
                {/}{/}
                {not_found}
                div.row
                    .col-md-12.text-center.alert.alert-warning(role="alert")
                        span.icon-attention.fa.fa-exclamation-triangle  &nbsp;{$not_found_message}
                {/}

            {totals}
            tfoot
                tr(class="totals")
                    {cols}{col}
                    <td {$tdparam}>
                    {$content}
                    </td>
                    {/}{/}
            {/}
        {$Paginator}
