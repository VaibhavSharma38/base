div(id="{$_name}")
  //-====== Tell Us About Yourself with Person Mark-up ========
  {person_info}
  script(type='application/ld+json').
   {
   "@context": "http://schema.org",
   "@type" : "Organization",
   "name" : "[{company_name}person's name{/}]",
   "image" : "[image_id]",
   "address" : {
   "@type" : "PostalAddress",
   "addressLocality" : "[{$company_address}]",
   "postalCode" : "[{$company_pin_code}]"
   },
   "telephone" : "[{mobile_no}]",
   "email" : "[{$company_email}]",
   "description" : "[{$company_description}]"
   }
  {/}