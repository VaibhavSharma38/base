.container(style='margin-top:40px')
  .row
    .col-sm-6.col-md-4.col-md-offset-4
      .panel.panel-default
        .panel-heading
          strong  Registration to continue
        .panel-body
          form(role='form', action='#', method='POST')
            fieldset
              //- .row
              //-   .text-center
              //-     img.profile-img(src='https://lh5.googleusercontent.com/-b0-k99FZlyE/AAAAAAAAAAI/AAAAAAAAAAA/eu7opA4byxI/photo.jpg?sz=120', alt='')
              .row
                .col-sm-12.col-md-10.col-md-offset-1
                  .form-group
                    .input-group
                      span.input-group-addon
                        i.glyphicon.glyphicon-user
                      {$first_name}    
                      //- input(placeholder='Username', name='loginname', type='text', autofocus='')
